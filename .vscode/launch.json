{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Django",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/manage.py",
        "args": [
          "runserver",
          "--noreload"
        ],
        "django": true,
        "console": "integratedTerminal",
        "env": {
          "PYTHONUNBUFFERED": "1",
          "DJANGO_SETTINGS_MODULE": "my_blog_project.settings"
        },
        "cwd": "${workspaceFolder}"
      }
    ]
  }
  